---
import projectData from "../data/proyect.json";
const { sectionTitle, projects } = projectData;
---

<section data-aos="fade-down" id="projects" class="min-h-screen py-16 animate-fade-scroll" style="background-color: #1a191d;">
   <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
         <h2 class="text-4xl lg:text-5xl font-light text-white mb-6 tracking-wide">
            {sectionTitle}
         </h2>
         <div class="w-24 h-1 bg-white mx-auto rounded-full"></div>
      </div>

      <div class="grid gap-8 grid-cols-1 lg:grid-cols-2">
         {
            projects.map((project, idx) => (
               <a
                  href={project.internalLink}
                  class="rounded-2xl overflow-hidden shadow-2xl group cursor-pointer transition-transform duration-300 hover:scale-105 block"
                  style="background-color: #1f1e22; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(255, 255, 255, 0.05);"
               >
                  <div class="relative">
                     <img src={project.image} alt={project.title} class="w-full h-80 object-cover object-center" />
                     <div class="absolute inset-0 bg-black bg-opacity-10 opacity-0 group-hover:opacity-80 transition-opacity duration-300 flex items-center justify-center">
                        <div class="inline-flex items-center gap-2 px-6 py-3 bg-white text-gray-900 rounded-full font-medium text-sm">
                           <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="w-4 h-4">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                           </svg>
                           Ir al enlace
                        </div>
                     </div>
                  </div>
                  <div class="p-6">
                     <h3 class="text-lg font-semibold text-white mb-2">{project.title}</h3>
                     <p class="text-gray-400 text-sm">{project.category}</p>
                  </div>
               </a>
            ))
         }
      </div>
   </div>
</section>
