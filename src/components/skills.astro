---
import skillsData from "../data/skills.json";
---

<section data-aos="fade-down" id="skills" class="min-h-screen py-20 animate-fade-scroll">
   <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
         <h2 class="text-4xl lg:text-5xl font-light text-white mb-8">
            {skillsData.sectionTitle}
         </h2>
         <div class="w-32 h-px bg-white mx-auto"></div>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8 max-w-6xl mx-auto">
         {
            skillsData.skills.map((skill) => (
               <div class="flex flex-col items-center group/skill transition-all duration-300 hover:transform hover:-translate-y-1">
                  <div
                     class="w-16 h-16 mb-4 transition-all duration-300 flex items-center justify-center rounded-lg shadow-lg group-hover/skill:shadow-xl group-hover/skill:bg-gray-700"
                     style="background-color: #1f1e22; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2);"
                  >
                     <img src={skill.icon} alt={skill.name} class="w-10 h-10 object-contain" />
                  </div>
                  <span class="text-xs font-light text-gray-300 text-center tracking-wide">{skill.name}</span>
               </div>
            ))
         }
      </div>
   </div>
</section>
