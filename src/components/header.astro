---
import headerData from "../data/header.json";

const { name, title, subtitle, description, cvButton, contactButton, socials } = headerData;

const socialIcons = {
   GitHub:
      '<svg fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6"><path d="M12 0c-6.63 0-12 5.37-12 12 0 5.3 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61-.546-1.387-1.333-1.756-1.333-1.756-1.09-.745.083-.729.083-.729 1.205.085 1.84 1.237 1.84 1.237 1.07 1.834 2.807 1.304 3.492.997.108-.775.418-1.305.762-1.605-2.665-.305-5.466-1.332-5.466-5.93 0-1.31.468-2.38 1.236-3.22-.124-.303-.535-1.527.117-3.176 0 0 1.008-.322 3.3 1.23.957-.266 1.984-.399 3.003-.404 1.018.005 2.046.138 3.006.404 2.289-1.552 3.295-1.23 3.295-1.23.653 1.649.242 2.873.119 3.176.77.84 1.235 1.91 1.235 3.22 0 4.61-2.803 5.624-5.475 5.921.43.372.823 1.102.823 2.222 0 1.606-.014 2.898-.014 3.293 0 .322.216.694.825.576 4.765-1.587 8.2-6.086 8.2-11.384 0-6.63-5.373-12-12-12z"></path></svg>',
   LinkedIn:
      '<svg fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6"><path d="M19 0h-14c-2.76 0-5 2.24-5 5v14c0 2.76 2.24 5 5 5h14c2.76 0 5-2.24 5-5v-14c0-2.76-2.24-5-5-5zm-11 19h-3v-10h3v10zm-1.5-11.28c-.97 0-1.75-.79-1.75-1.75s.78-1.75 1.75-1.75 1.75.79 1.75 1.75-.78 1.75-1.75 1.75zm15.5 11.28h-3v-5.6c0-1.34-.03-3.07-1.87-3.07-1.87 0-2.16 1.46-2.16 2.97v5.7h-3v-10h2.89v1.36h.04c.4-.75 1.38-1.54 2.84-1.54 3.04 0 3.6 2 3.6 4.59v5.59z"></path></svg>',
};
---

<header id="header" class="min-h-screen w-full flex items-center justify-center relative overflow-hidden">
   <div class="absolute inset-0 pointer-events-none">
      <div class="particle particle-1"></div>
      <div class="particle particle-2"></div>
      <div class="particle particle-3"></div>
      <div class="particle particle-4"></div>
      <div class="particle particle-5"></div>
      <div class="star star-1"></div>
      <div class="star star-2"></div>
      <div class="star star-3"></div>
      <div class="star star-4"></div>
      <div class="star star-5"></div>
      <div class="star star-6"></div>
      <div class="star star-7"></div>
      <div class="star star-8"></div>
      <div class="star star-9"></div>
      <div class="star star-10"></div>
      <div class="light-orb"></div>
   </div>

   <div class="text-center max-w-5xl mx-auto px-4 z-10 relative">
      <div class="mb-8 animate-slide-down">
         <h2 class="text-3xl md:text-4xl font-light text-gray-100 tracking-wide">
            {title}
            <span class="block text-xl md:text-2xl font-normal text-white mt-2">{subtitle}</span>
         </h2>
      </div>
      <div class="relative mb-8">
         <h1 class="text-5xl md:text-7xl font-light text-white my-6 tracking-wide animate-scale-in" style="text-shadow: 0 0 30px rgba(255,255,255,0.3), 0 0 60px rgba(255,255,255,0.1);">
            {name}
         </h1>
      </div>
      <p class="text-base md:text-lg text-gray-300 max-w-2xl mx-auto mb-8 leading-relaxed animate-fade-in-up font-light tracking-wide">
         {description}
      </p>
      <div class="flex items-center justify-center gap-4 mb-8 animate-fade-in-up-delay">
         <a
            target="_blank"
            rel="noopener noreferrer"
            href={cvButton.url}
            class="inline-flex items-center gap-2 px-8 py-3 border border-white text-white rounded-full font-medium hover:bg-white hover:text-gray-900 transition"
         >
            <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="w-5 h-5">
               <path stroke-linecap="round" stroke-linejoin="round" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
               ></path>
            </svg>
            {cvButton.label}
         </a>
         <a href={contactButton.url} class="inline-flex items-center gap-2 px-8 py-3 border border-gray-400 text-gray-400 rounded-full font-medium hover:bg-gray-400 hover:text-gray-900 transition">
            <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="w-5 h-5">
               <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            {contactButton.label}
         </a>
      </div>
      <div class="flex justify-center items-center gap-6 animate-fade-in-up-delay-2">
         {
            socials.map((social) => (
               <a href={social.url} target="_blank" rel="noopener noreferrer" aria-label={social.name} class="text-gray-400 hover:text-white transition-colors">
                  <Fragment set:html={socialIcons[social.name as keyof typeof socialIcons]} />
               </a>
            ))
         }
      </div>
   </div>
</header>

<style>
   @keyframes slide-down {
      0% {
         opacity: 0;
         transform: translateY(-50px);
      }
      100% {
         opacity: 1;
         transform: translateY(0);
      }
   }

   @keyframes scale-in {
      0% {
         opacity: 0;
         transform: scale(0.5);
      }
      100% {
         opacity: 1;
         transform: scale(1);
      }
   }

   @keyframes fade-in-up {
      0% {
         opacity: 0;
         transform: translateY(30px);
      }
      100% {
         opacity: 1;
         transform: translateY(0);
      }
   }

   @keyframes glow {
      0%,
      100% {
         opacity: 0.6;
      }
      50% {
         opacity: 0.9;
      }
   }

   @keyframes twinkle {
      0%,
      100% {
         opacity: 0.3;
         transform: scale(1);
      }
      50% {
         opacity: 1;
         transform: scale(1.2);
      }
   }

   .animate-slide-down {
      animation: slide-down 1s ease-out;
   }
   .animate-scale-in {
      animation: scale-in 1.2s ease-out;
   }
   .animate-fade-in-up {
      animation: fade-in-up 1s ease-out 0.5s both;
   }
   .animate-fade-in-up-delay {
      animation: fade-in-up 1s ease-out 1s both;
   }
   .animate-fade-in-up-delay-2 {
      animation: fade-in-up 1s ease-out 1.5s both;
   }
   .animate-glow {
      animation: glow 3s ease-in-out infinite;
   }

   /* Part√≠culas */
   .particle {
      position: absolute;
      width: 4px;
      height: 4px;
      background: radial-gradient(circle, rgba(255, 255, 255, 0.8), transparent);
      border-radius: 50%;
      animation: float-particle 8s ease-in-out infinite;
   }

   .particle-1 {
      top: 20%;
      left: 10%;
      animation-delay: 0s;
   }
   .particle-2 {
      top: 60%;
      left: 20%;
      animation-delay: 2s;
   }
   .particle-3 {
      top: 30%;
      right: 15%;
      animation-delay: 4s;
   }
   .particle-4 {
      bottom: 40%;
      left: 15%;
      animation-delay: 6s;
   }
   .particle-5 {
      bottom: 20%;
      right: 20%;
      animation-delay: 1s;
   }

   @keyframes float-particle {
      0%,
      100% {
         transform: translateY(0px);
         opacity: 0.3;
      }
      50% {
         transform: translateY(-30px);
         opacity: 1;
      }
   }

   .light-orb {
      position: absolute;
      top: 25%;
      right: 25%;
      width: 200px;
      height: 200px;
      background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0.1) 40%, transparent 70%);
      border-radius: 50%;
      filter: blur(20px);
      animation: pulse-light 4s ease-in-out infinite;
   }

   @keyframes pulse-light {
      0%,
      100% {
         transform: scale(1);
         opacity: 0.3;
      }
      50% {
         transform: scale(1.2);
         opacity: 0.6;
      }
   }

   .star {
      position: absolute;
      background: white;
      clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
      animation: twinkle 3s ease-in-out infinite;
   }

   .star-1 {
      width: 8px;
      height: 8px;
      top: 15%;
      left: 15%;
      animation-delay: 0s;
   }
   .star-2 {
      width: 6px;
      height: 6px;
      top: 25%;
      left: 80%;
      animation-delay: 0.5s;
   }
   .star-3 {
      width: 10px;
      height: 10px;
      top: 40%;
      left: 10%;
      animation-delay: 1s;
   }
   .star-4 {
      width: 4px;
      height: 4px;
      top: 60%;
      left: 85%;
      animation-delay: 1.5s;
   }
   .star-5 {
      width: 7px;
      height: 7px;
      top: 70%;
      left: 20%;
      animation-delay: 2s;
   }
   .star-6 {
      width: 5px;
      height: 5px;
      top: 80%;
      left: 75%;
      animation-delay: 2.5s;
   }
   .star-7 {
      width: 9px;
      height: 9px;
      top: 35%;
      left: 60%;
      animation-delay: 0.8s;
   }
   .star-8 {
      width: 6px;
      height: 6px;
      top: 50%;
      left: 30%;
      animation-delay: 1.8s;
   }
   .star-9 {
      width: 8px;
      height: 8px;
      top: 20%;
      left: 45%;
      animation-delay: 1.2s;
   }
   .star-10 {
      width: 4px;
      height: 4px;
      top: 85%;
      left: 50%;
      animation-delay: 2.2s;
   }

   @keyframes twinkle {
      0%,
      100% {
         opacity: 0.3;
         transform: scale(1);
      }
      50% {
         opacity: 1;
         transform: scale(1.2);
      }
   }
</style>
