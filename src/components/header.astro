---
import headerData from "../data/header.json";
---

<header id="home" class="min-h-screen bg-neutral-50 flex items-center justify-center relative overflow-hidden">
   <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 animate-fadein">
      <h1 class="text-4xl sm:text-5xl lg:text-7xl font-light text-gray-900 mb-6 tracking-wide animate-header-shine relative overflow-hidden">
         <span class="relative z-10">
            {headerData.name}
         </span>
         <span class="header-shine"></span>
      </h1>
      <div class="mb-8">
         <h2 class="text-xl sm:text-2xl lg:text-4xl text-gray-700 font-light mb-2">
            {headerData.title}
         </h2>
         <h2 class="text-xl sm:text-2xl lg:text-4xl text-gray-600 font-light mb-2">
            {headerData.subtitle}
         </h2>
      </div>
      <p class="text-base sm:text-lg text-gray-600 max-w-96 mx-auto mb-10 leading-relaxed font-light">
         {headerData.description}
      </p>
      <div class="mb-16">
         <a
            target="_blank"
            href={headerData.cvButton.url}
            class="inline-flex items-center px-6 py-3 border border-gray-300 bg-white text-black font-medium text-base rounded-full hover:bg-gray-100 transition-all duration-300 group shadow-none tracking-widest uppercase"
         >
            {headerData.cvButton.label}
            <svg class="ml-2 w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
         </a>
      </div>
   </div>
</header>

<style>
   @keyframes fadein {
      from {
         opacity: 0;
         transform: translateY(30px);
      }
      to {
         opacity: 1;
         transform: translateY(0);
      }
   }
   .animate-fadein {
      animation: fadein 1.2s cubic-bezier(0.4, 0, 0.2, 1);
   }
   html {
      scroll-behavior: smooth;
   }
   @keyframes headerShine {
      0% {
         left: -75%;
      }
      60% {
         left: 120%;
      }
      100% {
         left: 120%;
      }
   }
   .animate-header-shine {
      position: relative;
   }
   .header-shine {
      content: "";
      position: absolute;
      top: 0;
      left: -75%;
      width: 50%;
      height: 100%;
      background: linear-gradient(120deg, transparent 0%, rgba(255, 255, 255, 0.3) 50%, transparent 100%);
      z-index: 1;
      pointer-events: none;
      animation: headerShine 2.5s cubic-bezier(0.4, 0, 0.2, 1) infinite;
   }
</style>
