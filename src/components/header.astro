---

<header id="header" class="min-h-screen w-full flex items-center justify-center relative overflow-hidden">
   <div class="absolute inset-0 pointer-events-none">
      <div class="geometric-shape shape-1"></div>
      <div class="geometric-shape shape-2"></div>
      <div class="geometric-shape shape-3"></div>
      <div class="geometric-shape shape-4"></div>
      <div class="geometric-shape shape-5"></div>
      <div class="geometric-orb"></div>
   </div>
   <div class="loading-animation">
      <div class="loader"></div>
   </div>
   <div class="text-center max-w-4xl mx-auto px-6 sm:px-4 z-10 relative opacity-100">
      <div class="mb-8 sm:mb-12">
         <h1 class="text-4xl sm:text-6xl md:text-8xl font-light text-white mb-4 sm:mb-6 tracking-wider uppercase">
            {name}
         </h1>
         <div class="w-16 sm:w-24 h-px bg-white mx-auto mb-6 sm:mb-8"></div>
         <p class="text-base sm:text-lg md:text-xl text-gray-300 font-light tracking-wide uppercase letter-spacing-wider px-2">
            {title} â€¢ {subtitle}
         </p>
      </div>

      <div class="mb-8 sm:mb-12">
         <p class="text-sm sm:text-base md:text-lg text-gray-400 max-w-2xl mx-auto leading-relaxed font-light px-2">
            {description}
         </p>
      </div>
      <div class="flex flex-col md:flex-row items-center justify-center gap-4 sm:gap-6 mb-8 sm:mb-12 max-w-sm sm:max-w-md md:max-w-none mx-auto px-2">
         <a
            target="_blank"
            rel="noopener noreferrer"
            href={cvButton.url}
            class="w-full md:w-auto inline-flex items-center justify-center gap-2 px-6 sm:px-8 py-3 sm:py-4 border border-white text-white font-light text-xs sm:text-sm uppercase tracking-wider hover:bg-white hover:text-black transition-all duration-300"
            style="border-radius: 5px;"
         >
            {cvButton.label}
         </a>
         <a
            href={contactButton.url}
            class="w-full md:w-auto inline-flex items-center justify-center gap-2 px-6 sm:px-8 py-3 sm:py-4 bg-white text-black font-light text-xs sm:text-sm uppercase tracking-wider hover:bg-gray-200 transition-all duration-300"
            style="border-radius: 5px;"
         >
            {contactButton.label}
         </a>
      </div>

      <div class="flex justify-center items-center gap-6 sm:gap-8 px-2">
         {
            socials.map((social) => (
               <a href={social.url} target="_blank" rel="noopener noreferrer" aria-label={social.name} class="text-gray-400 hover:text-white transition-colors duration-300 p-1">
                  <Fragment set:html={socialIcons[social.name as keyof typeof socialIcons]} />
               </a>
            ))
         }
      </div>
   </div>
</header>

<style>
   .letter-spacing-wider {
      letter-spacing: 0.2em;
   }

   .loading-animation {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: #1a191d;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 9999;
      animation: fadeOut 0.3s ease-in-out 0.1s forwards;
   }

   .loader {
      width: 60px;
      height: 60px;
      border: 2px solid rgba(255, 255, 255, 0.1);
      border-top: 2px solid white;
      border-radius: 50%;
      animation: spin 0.3s linear infinite;
   }

   @keyframes spin {
      0% {
         transform: rotate(0deg);
      }
      100% {
         transform: rotate(360deg);
      }
   }

   @keyframes fadeOut {
      0% {
         opacity: 1;
      }
      100% {
         opacity: 0;
         visibility: hidden;
      }
   }

   .animate-fade-in-delayed {
      animation: fadeInDelayed 0.8s ease-out 1s forwards;
   }

   .animate-slide-up {
      animation: slideUp 0.8s ease-out 1.2s forwards;
   }

   .animate-expand {
      animation: expand 0.6s ease-out 1.5s forwards;
   }

   .animate-fade-in-up {
      animation: fadeInUp 0.6s ease-out 1.7s forwards;
   }

   .animate-fade-in-up-delay {
      animation: fadeInUp 0.6s ease-out 1.9s forwards;
   }

   .animate-fade-in-up-delay-2 {
      animation: fadeInUp 0.6s ease-out 2.1s forwards;
   }

   .animate-fade-in-up-delay-3 {
      animation: fadeInUp 0.6s ease-out 2.3s forwards;
   }

   @keyframes fadeInDelayed {
      0% {
         opacity: 0;
      }
      100% {
         opacity: 1;
      }
   }

   @keyframes slideUp {
      0% {
         opacity: 0;
         transform: translateY(50px);
      }
      100% {
         opacity: 1;
         transform: translateY(0);
      }
   }

   @keyframes expand {
      0% {
         width: 0;
         opacity: 0;
      }
      100% {
         width: 96px;
         opacity: 1;
      }
   }

   @keyframes fadeInUp {
      0% {
         opacity: 0;
         transform: translateY(30px);
      }
      100% {
         opacity: 1;
         transform: translateY(0);
      }
   }

   .geometric-shape {
      position: absolute;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
   }

   .shape-1 {
      width: 120px;
      height: 80px;
      top: 20%;
      left: 10%;
      transform: rotate(15deg);
      animation: float1 6s ease-in-out infinite;
   }

   .shape-2 {
      width: 100px;
      height: 100px;
      top: 15%;
      right: 15%;
      transform: rotate(-20deg);
      animation: float2 8s ease-in-out infinite;
   }

   .shape-3 {
      width: 80px;
      height: 60px;
      bottom: 30%;
      left: 20%;
      transform: rotate(45deg);
      animation: float3 7s ease-in-out infinite;
   }

   .shape-4 {
      width: 150px;
      height: 40px;
      bottom: 20%;
      right: 25%;
      transform: rotate(-30deg);
      animation: float4 9s ease-in-out infinite;
   }

   .shape-5 {
      width: 60px;
      height: 60px;
      top: 60%;
      left: 50%;
      transform: rotate(60deg);
      animation: float5 5s ease-in-out infinite;
   }

   .geometric-orb {
      position: absolute;
      width: 200px;
      height: 200px;
      background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
      border-radius: 50%;
      top: 30%;
      right: 20%;
      animation: pulse 4s ease-in-out infinite;
   }

   @keyframes float1 {
      0%,
      100% {
         transform: rotate(15deg) translateY(0px);
      }
      50% {
         transform: rotate(15deg) translateY(-20px);
      }
   }

   @keyframes float2 {
      0%,
      100% {
         transform: rotate(-20deg) translateY(0px);
      }
      50% {
         transform: rotate(-20deg) translateY(-30px);
      }
   }

   @keyframes float3 {
      0%,
      100% {
         transform: rotate(45deg) translateY(0px);
      }
      50% {
         transform: rotate(45deg) translateY(-15px);
      }
   }

   @keyframes float4 {
      0%,
      100% {
         transform: rotate(-30deg) translateY(0px);
      }
      50% {
         transform: rotate(-30deg) translateY(-25px);
      }
   }

   @keyframes float5 {
      0%,
      100% {
         transform: rotate(60deg) translateY(0px);
      }
      50% {
         transform: rotate(60deg) translateY(-18px);
      }
   }

   @keyframes pulse {
      0%,
      100% {
         opacity: 0.3;
         transform: scale(1);
      }
      50% {
         opacity: 0.6;
         transform: scale(1.1);
      }
   }

   @media (max-width: 768px) {
      .geometric-shape {
         display: none;
      }
      .geometric-orb {
         width: 100px;
         height: 100px;
      }

      .letter-spacing-wider {
         letter-spacing: 0.1em;
      }

      h1 {
         line-height: 1.2;
      }
   }

   @media (max-width: 480px) {
      .letter-spacing-wider {
         letter-spacing: 0.05em;
      }
   }
</style>
