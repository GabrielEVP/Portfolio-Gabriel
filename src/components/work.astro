---
import { loadSectionData } from "../utils/i18n";
const { lang } = Astro.props;
const workData = await loadSectionData("work", lang);
const { sectionTitle, jobs } = workData;
---

<section id="experience" class="min-h-screen bg-neutral-50 py-16 animate-fade-scroll">
   <div class="container mx-auto px-4">
      <div class="text-center mb-24">
         <h2 class="text-4xl lg:text-5xl font-light text-black mb-6 tracking-wide">
            {sectionTitle}
         </h2>
         <div class="w-24 h-1 bg-black mx-auto rounded-full"></div>
      </div>
      <div class="flex flex-col items-center gap-12 max-w-4xl mx-auto">
         {
            jobs.map((job: any) => (
               <div class="bg-white rounded-xl border border-gray-200 p-10 sm:p-16 transition-shadow duration-300 w-full max-w-2xl">
                  <h3 class="text-center text-2xl font-semibold text-gray-900 mb-2 border-b pb-2 tracking-wide">{job.title}</h3>
                  <div class="flex items-center justify-center text-gray-600 mb-2 gap-2">
                     <span class="text-sm font-medium">{job.company}</span>
                     <span class="mx-1">Â·</span>
                     <span class="text-sm">{job.location}</span>
                  </div>
                  <p class="text-gray-500 text-sm italic mb-4 text-center">{job.period}</p>
                  <p class="text-gray-700 text-base leading-relaxed mb-6 text-left">{job.description}</p>
                  <div class="text-center">
                     <p class="text-gray-800 font-medium mb-4">{job.technologiesTitle}</p>
                     <div class="grid grid-cols-4 gap-4">
                        {job.technologies.map((tech: any) => (
                           <div class="flex flex-col items-center group">
                              <div class="flex items-center justify-center">
                                 <img src={tech.icon} alt={tech.name} class="w-8 h-8 object-contain" />
                              </div>
                              <span class="text-xs text-gray-600 mt-1">{tech.name}</span>
                           </div>
                        ))}
                     </div>
                  </div>
               </div>
            ))
         }
      </div>
   </div>
</section>
