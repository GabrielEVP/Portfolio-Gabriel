---
import educationData from '../data/education.json';
---

<section id="education" class="min-h-screen bg-white py-16">
    <div class="container mx-auto px-4">
        <div class="text-center mb-24">
            <h2 class="text-4xl lg:text-5xl font-light text-black mb-6">
                Educaci√≥n
            </h2>
            <div class="w-24 h-1 bg-black mx-auto"></div>
        </div>

        <div class="flex flex-col items-center gap-8 max-w-4xl mx-auto">
            {educationData.map((item) => (
                <div class="bg-white rounded-lg p-8 sm:p-16 shadow-lg hover:shadow-xl transition-shadow duration-300 w-full max-w-2xl">
                    <h3 class="text-center text-2xl font-semibold text-gray-900 mb-2 border-b pb-2">
                        {item.title}
                    </h3>
                    <div class="flex items-center justify-center text-gray-600 mb-2">
                        <span class="text-sm font-medium">{item.company}</span>
                        <span class="mx-2">üìç</span>
                        <span class="text-sm">{item.location}</span>
                    </div>
                    <p class="text-gray-500 text-sm italic mb-4 text-center">
                        {item.period}
                    </p>
                    {item.description && (
                        <p class="text-gray-700 text-sm leading-relaxed mb-6 text-left">
                            {item.description}
                        </p>
                    )}
                    <div class="text-center">
                        <p class="text-gray-800 font-medium mb-4">Tecnolog√≠as utilizadas:</p>
                        <div class="grid grid-cols-4 gap-3">
                            {item.technologies.map((tech) => (
                                <div class="flex flex-col items-center group">
                                    <div class="w-10 h-10 flex items-center justify-center">
                                        <img
                                            src={tech.icon}
                                            alt={tech.name}
                                            class="w-10 h-10"
                                        />
                                    </div>
                                    <span class="text-xs text-gray-600 mt-1">{tech.name}</span>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
