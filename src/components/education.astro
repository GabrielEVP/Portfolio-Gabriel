---
import educationData from "../data/education.json";
---

<section id="education" class="min-h-screen bg-neutral-50 py-16 animate-fade-scroll">
   <div class="container mx-auto px-4">
      <div class="text-center mb-24">
         <h2 class="text-4xl lg:text-5xl font-light text-black mb-6 tracking-wide">
            {educationData.sectionTitle}
         </h2>
         <div class="w-24 h-1 bg-black mx-auto rounded-full"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-16 max-w-5xl mx-auto">
         <div class="w-full">
            <h3 class="text-center text-3xl font-semibold text-gray-800 mb-10 tracking-wide">
               {educationData.higherDegreesTitle}
            </h3>
            <div class="flex flex-col gap-10">
               {
                  educationData.higherDegrees.map((item) => (
                     <div class="bg-white rounded-xl border border-gray-200 p-10 transition-shadow duration-300 w-full">
                        <h4 class="text-center text-2xl font-semibold text-gray-900 mb-2 border-b pb-2 tracking-wide">{item.title}</h4>
                        <div class="flex items-center justify-center text-gray-600 mb-2 gap-2">
                           <span class="text-sm font-medium">{item.company}</span>
                           <span class="mx-1">Â·</span>
                           <span class="text-sm">{item.location}</span>
                        </div>
                        <p class="text-gray-500 text-sm italic mb-4 text-center">{item.period}</p>
                        <div class="text-center">
                           <p class="text-gray-800 font-medium mb-4">{item.technologiesTitle}</p>
                           <div class="grid grid-cols-4 gap-4 justify-center">
                              {item.technologies.map((tech) => (
                                 <div class="flex flex-col items-center">
                                    <img src={tech.icon} alt={tech.name} class="w-10 h-10 object-contain" />
                                    <span class="text-xs text-gray-600 mt-1">{tech.name}</span>
                                 </div>
                              ))}
                           </div>
                           {item.certificateLink && (
                              <div class="mt-8 text-center">
                                 <a
                                    target="_blank"
                                    href={item.certificateLink}
                                    class="inline-flex items-center px-8 py-3 border border-gray-400 bg-white text-black hover:bg-gray-100 hover:text-black transition-all duration-300 group rounded-full shadow-none tracking-widest text-sm uppercase"
                                 >
                                    <span>{item.certificateText}</span>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-3 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                       <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                    </svg>
                                 </a>
                              </div>
                           )}
                        </div>
                     </div>
                  ))
               }
            </div>
         </div>

         <div class="w-full flex flex-col items-center">
            <h3 class="text-3xl font-semibold text-gray-800 mb-10 text-center tracking-wide">
               {educationData.coursesTitle}
            </h3>
            <div class="flex flex-col gap-10 w-full max-w-xl">
               {
                  educationData.courses.map((item) => (
                     <div class="relative bg-white rounded-xl border border-gray-200 p-10 transition-shadow duration-300 w-full mx-auto">
                        <div class="absolute inset-0 pointer-events-none rounded-xl" style="background: linear-gradient(135deg, #f8f6f1 0%, #fff 100%); opacity: 0.5;" />
                        <div class="relative">
                           <div class="text-center mb-6">
                              <h5 class="text-xl font-bold text-gray-800 tracking-wide">{item.title}</h5>
                           </div>
                           <div class="flex flex-col items-center text-gray-600 mb-4 space-y-2">
                              <span class="font-medium text-lg">{item.company}</span>
                              <span class="text-sm">{item.location}</span>
                              <span class="text-sm font-medium text-gray-500">{item.period}</span>
                           </div>
                           <div class="text-center mt-6">
                              <p class="text-gray-800 font-medium mb-3">{item.technologiesTitle}</p>
                              <div class="flex justify-center gap-4 flex-wrap">
                                 {item.technologies.map((tech) => (
                                    <div class="flex flex-col items-center">
                                       <div class="w-10 h-10 flex items-center justify-center border border-gray-200 rounded-full bg-white">
                                          <img src={tech.icon} alt={tech.name} class="w-6 h-6 object-contain" />
                                       </div>
                                       <span class="text-xs text-gray-600 mt-1">{tech.name}</span>
                                    </div>
                                 ))}
                              </div>
                           </div>
                           {item.certificateLink && (
                              <div class="mt-8 text-center">
                                 <a
                                    target="_blank"
                                    href={item.certificateLink}
                                    class="inline-flex items-center px-8 py-3 border border-gray-400 bg-white text-black hover:bg-gray-100 hover:text-black transition-all duration-300 group rounded-full shadow-none tracking-widest text-sm uppercase"
                                 >
                                    <span>{item.certificateText}</span>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-3 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                       <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                    </svg>
                                 </a>
                              </div>
                           )}
                        </div>
                     </div>
                  ))
               }
            </div>
         </div>
      </div>
   </div>
</section>
