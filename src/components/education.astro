---
import educationData from "../data/education.json";
---

<section id="education" class="min-h-screen py-20 animate-fade-scroll flex items-center justify-center" style="background-color: #1a191d;">
   <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
      <div class="text-center mb-16">
         <h2 class="text-4xl lg:text-5xl font-light text-white mb-8 tracking-widest uppercase">
            {educationData.sectionTitle}
         </h2>
         <div class="w-32 h-px bg-white mx-auto"></div>
      </div>

      <div class="flex justify-center">
         <div
            class="rounded-3xl p-12 flex flex-col justify-center items-center text-center shadow-2xl hover:shadow-3xl transition-all duration-300"
            style="background-color: #1f1e22; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(255, 255, 255, 0.05);"
         >
            {
               educationData.higherDegrees.map((degree, index) => (
                  <div class="mb-8 last:mb-0">
                     <div
                        class="w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg"
                        style="background-color: #2a2831; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.4), 0 2px 4px -1px rgba(0, 0, 0, 0.3);"
                     >
                        <svg class="w-8 h-8 text-gray-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                           <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4Z" />
                           <path d="M0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z" />
                        </svg>
                     </div>

                     <h3 class="text-lg font-light text-white tracking-wide uppercase mb-2">{degree.title}</h3>
                     <p class="text-sm text-gray-400 mb-2">{degree.company}</p>
                     <p class="text-xs text-gray-500 italic mb-4">{degree.period}</p>

                     <div class="grid grid-cols-4 gap-4 justify-items-center mb-6">
                        {degree.technologies.map((tech) => (
                           <div class="flex flex-col items-center">
                              <img src={tech.icon} alt={tech.name} class="w-10 h-10 object-contain mb-1" />
                              <span class="text-xs text-gray-400 text-center font-light">{tech.name}</span>
                           </div>
                        ))}
                     </div>

                     {degree.certificateLink && (
                        <a
                           href={degree.certificateLink}
                           target="_blank"
                           rel="noopener noreferrer"
                           class="inline-flex items-center gap-2 px-6 py-3 border border-white text-white rounded-full font-medium text-sm hover:bg-white hover:text-gray-900 transition tracking-wide uppercase"
                        >
                           <svg fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="w-4 h-4">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                           </svg>
                           Ver Certificado
                        </a>
                     )}

                     {index < educationData.higherDegrees.length - 1 && <div class="w-16 h-px bg-gray-600 mx-auto mt-6" />}
                  </div>
               ))
            }
         </div>
      </div>
   </div>
</section>
