---
import aboutData from "../data/about.json";
---

<section data-aos="fade-down" id="about" class="min-h-screen py-16 animate-fade-scroll" style="background-color: #1a191d;">
   <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
         <h2 class="text-4xl lg:text-5xl font-light text-white mb-6 tracking-wide">
            {aboutData.title}
         </h2>
         <div class="w-24 h-1 bg-white mx-auto rounded-full"></div>
      </div>

      <div class="rounded-2xl p-16 shadow-2xl" style="background-color: #1f1e22; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(255, 255, 255, 0.05);">
         <div class="grid lg:grid-cols-5 gap-12 lg:gap-16 items-center">
            <div class="lg:col-span-2 flex justify-center">
               <div class="relative rounded-lg overflow-hidden shadow-lg">
                  <img src={aboutData.image} alt={aboutData.alt} class="w-full h-auto max-w-sm object-cover" />
               </div>
            </div>
            <div class="lg:col-span-3 space-y-4">
               {aboutData.description.map((paragraph) => <p class="text-lg text-gray-300 leading-relaxed">{paragraph}</p>)}
            </div>
         </div>
      </div>
   </div>
</section>
